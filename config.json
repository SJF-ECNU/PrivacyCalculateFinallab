{
  "runtime": {
    "parties": ["alice", "bob", "charlie"],
    "server": "charlie",
    "clients": ["alice", "bob"],
    "address": "local",
    "num_gpus": 1,
    "gpu_per_party": 0.5
  },
  "data": {
    "dataset": "mnist",
    "shuffle": true,
    "seed": 1234,
    "val_ratio": 0.05,
    "val_max_samples": 500,
    "partitioning": {
      "type": "iid",
      "seed": 1234,
      "label_skew": {
        "classes_per_client": 2
      },
      "dirichlet": {
        "alpha": 0.5,
        "min_size": 1
      },
      "feature_shift": {
        "base_type": "iid",
        "scale_range": [0.5, 1.5],
        "shift_range": [-0.2, 0.2],
        "noise_std": 0.0,
        "channel_wise": true
      }
    },
    "datasets": {
      "mnist": {
        "root": "data",
        "download": false,
        "categorical_y": true,
        "parts": {
          "alice": 0.4,
          "bob": 0.6
        }
      },
      "cifar10": {
        "root": "data",
        "download": false,
        "categorical_y": true,
        "parts": {
          "alice": 0.4,
          "bob": 0.6
        }
      },
      "cifar100": {
        "root": "data",
        "download": false,
        "categorical_y": true,
        "parts": {
          "alice": 0.4,
          "bob": 0.6
        }
      }
    }
  },
  "train": {
    "rounds": 100,
    "local_epochs": 1,
    "batch_size": 32,
    "lr": 0.01,
    "aggregate_freq": 1,
    "eval_at_end": true,
    "eval_interval": 5,
    "device": "cuda",
    "optimizer": "sgd",
    "momentum": 0.0
  },
  "early_stop": {
    "enable": true,
    "metric": "val_acc",
    "mode": "max",
    "patience": 2,
    "min_delta": 0.001
  },
  "wandb": {
    "enable": true,
    "project": "federated-final",
    "entity": null,
    "mode": "online",
    "group": "default",
    "tags": ["baseline"],
    "log_per_client": true,
    "log_train_per_client": false
  },
  "fedprox": {
    "mu": 0.01
  },
  "model": {
    "name": "fedavg",
    "arch": "convnet"
  }
}
